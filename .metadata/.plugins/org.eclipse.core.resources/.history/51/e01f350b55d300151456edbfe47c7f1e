package com.cimpapps

class FromJtoG {
	
	//Groovy boolean evaluation
	static main(args){
		def i = 4;
		
		//Groovy evaluates numbers different than 0 to true
		if (i)
			println i;
		i = 0;
		if (i)
			println i;
			
		i = "Hello";
		if(i)
			println i;
		i = null;
		if(i)
			println true;
		else
			println false;
	}	
	
}
